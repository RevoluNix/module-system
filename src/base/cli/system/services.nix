{ hostname, ... }:
{ pkgs, ... }:
{
###########
# Systemd #
#######################################################################
  services = {
    gvfs.enable = true;
    tumbler.enable = true;
    openssh.enable = true;
    fwupd.enable = true;
  };
  # ------------------------------------------------------------------ #
  xdg.portal.enable = true;
  # ------------------------------------------------------------------ #
  programs = {
    dconf.enable = true;
  };
  # ------------------------------------------------------------------ #
  networking.firewall = {
    enable = true;
    allowedTCPPorts = [  ];
    allowedUDPPorts = [  ];
    allowPing = true;
  };
############
# Hardware #
########################################################################
  # ------------------------------------------------------------------ #
  hardware = {
    enableAllFirmware = true;
  };
  # ------------------------------------------------------------------ #
  networking = {
    hostName = hostname;
  };
########################################################################
}
